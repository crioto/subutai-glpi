{
  "name": "${environmentName}",
  "description": "GLPI",
  "version": "1.0.0",
  "author": "https://github.com/crioto",
  "containers": [
    {
      "hostname": "${webContainerName}",
      "template": "debian-stretch",
      "peer-criteria": "HTTP-GROUP",
      "size": "${containerSize}",
      "port-mapping": [
        {
          "protocol": "http",
          "domain": "${domainName}",
          "internal-port": "80",
          "external-port": "80"
        }
      ]
    }
  ],
  "peer-criteria": [
    {
      "name": "HTTP-GROUP"
    }
  ],
  "ansible-configuration": {
    "source-url": "https://github.com/crioto/subutai-glpi/archive/master.zip",
    "ansible-playbook": "playbook.yaml",
    "extra-vars": [
      {
        "key": "domainName",
        "value": "${domainName}"
      },
      {
        "key": "dbName",
        "value": "${dbName}"
      },
      {
        "key": "dbUser",
        "value": "${dbUser}"
      },
      {
        "key": "dbPassword",
        "value": "${dbPassword}"
      }
    ],
    "groups": [
      {
        "name": "glpi",
        "hostnames": [
          "${webContainerName}"
        ]
      }
    ]
  },
  "user-variables": {
    "environmentName": {
      "description": "Enter the environment name",
      "type": "string",
      "default": "glpi",
      "validation": "[a-zA-Z0-9]+"
    },
    "domainName": {
      "description": "Enter the application domain name",
      "type": "domain",
      "default": "change.the.domain",
      "validation": "[a-zA-Z0-9]+"
    },
    "webContainerName": {
      "description": "Enter the container's hostname",
      "type": "string",
      "default": "glpi",
      "validation": "[a-zA-Z0-9]+"
    },
    "containerSize": {
      "description": "Container Size",
      "type": "enum",
      "default": "TINY",
      "validation": "TINY,SMALL,MEDIUM,LARGE,HUGE"
    },
    "dbName": {
      "description": "Database Name",
      "type": "string",
      "default": "glpi",
      "validation": "[a-zA-Z0-9]"
    },
    "dbUser": {
      "description": "Database User",
      "type": "string",
      "default": "glpi",
      "validation": "[a-zA-Z0-9]"
    },
    "dbPassword": {
      "description": "Database Password",
      "type": "string",
      "default": "glpi-db-password",
      "validation": "[a-zA-Z0-9]"
    }
  }
}